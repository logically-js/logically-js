{
  "compilerOptions": {
    "baseUrl": "./src",
    "checkJs": false,
    "allowJs": true,
    "target": "es2018",
    "module": "commonjs",
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": ".",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop" : true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", ".nyc_output"]
}
